<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.layout.BorderPane?>


<BorderPane fx:id="messageBox" styleClass="message-box-frame" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8">
   <center>
      <HBox>
         <children>
            <Text fx:id="messageBoxText" strokeType="OUTSIDE" strokeWidth="0.0" textAlignment="CENTER" wrappingWidth="300.0" BorderPane.alignment="CENTER" />
         </children>
      </HBox>
   </center>
   <bottom>
      <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <bottom>
            <Button mnemonicParsing="false" onAction="#close" text="OK" BorderPane.alignment="CENTER" />
         </bottom>
      </BorderPane>
   </bottom>
</BorderPane>
